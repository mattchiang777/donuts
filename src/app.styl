@import '~normalize.css/normalize.css'

@font-face
	font-family: 'COCOGOOSE'
	src: url(assets/fonts/cocogoose.otf) format('opentype')
	font-weight: normal
	font-style: normal


body
	color: #fff
	font-size: 16px
	font-family: 'COCOGOOSE', sans-serif
	text-rendering: optimizeLegibility
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

main
	position: relative

	img
		// width: 100%
		width: 100px
		position: absolute
		top: 0
		left: 0

	h1

		align(both)
		display: none

		+above('m')
			display: inline-block
			font-size: 1.5rem

		+above('xl')
			display: inline-block
			font-size: 2rem

	canvas
		width: 100%
		height: 100%